<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Database</title>
    <link rel="stylesheet" href="/Database.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" integrity="sha512-wnea99uKIC3TJF7v4eKk4Y+lMz2Mklv18+r4na2Gn1abDRPPOeef95xTzdwGD9e6zXJBteMIhZ1+68QC5byJZw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/f4d4f77253.js" crossorigin="anonymous"></script>
</head>
<body>
    <form action="/Database">
      <%- include('header1.ejs'); -%>
      <div class="TableBox shadow-2xl">
        <div class="Database">
          <H1 class="MainText">DATABASE</H1>
          <table class="table table-dark">
              <thead>
                <tr>
                  <th scope="col">SNO</th>
                  <th scope="col">ID</th>
                  <th scope="col">NAME</th>
                  <th scope="col">TYPE</th>
                  <th scope="col">QTY</th>
                  <th scope="col">PRICE</th>
                  <th scope="col">DELETE</th>
                </tr>
              </thead>
              <tbody>
                <%
                if(DatabaseItem.length!=0){
                var i=1;
                DatabaseItem.forEach(function(data){
                %>
                <tr>
                    <th scope="row">1</th>
                  <td><%= data.ID %></td>
                  <td><%= data.Name %></td>
                  <td><%= data.Type %></td>
                  <td><%= data.Qty %></td>
                  <td><%= data.Price %></td>
                  <td><a href="/Delete/<%= data.ID %>" role="button"><i class="fas fa-trash"></i></a></td>
                </tr>
                <%  i++; }) %>
      <% } else{ %>
          <tr>
              <td colspan="7">No Data Found</td>
          </tr>
      <% } %>
      </tbody>
            </table>
      </div>
      </div>
       
    </form>
</body>
</html>